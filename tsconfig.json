{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".", 

    "paths": {
      "@/*": ["nextjs/src/*"] 
    }
  },

  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
